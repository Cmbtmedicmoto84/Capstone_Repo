@model IEnumerable<MorimotoCapstone.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width-device-width, initial-scale=1.0" />
    <title>Products</title>
    <style>
        table, th, td{
            border: 1px solid white;
            color: white;
        }

        .button {
            background-color: #4d4c4c;
            color: white;
            border: 2px solid #00ffff;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .button:hover{
            background-color: #4793fc;
            color: #00ff21;
            border: 2px solid #000000;
        }

    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered">
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Description</th>
                        </tr>
                    @foreach (var product in @Model)
                     {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.ProductPrice</td>
                            <td>@product.ProductDescription</td>
                            <td>
                            @Html.ActionLink("Order Now!", "AddToCart", "ShoppingCartsController", new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                     }
                </table>
            </div>
        </div>
    </div>
</body>
</html>